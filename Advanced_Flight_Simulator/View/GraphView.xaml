<UserControl x:Class="Advanced_Flight_Simulator.GraphView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Advanced_Flight_Simulator"
             xmlns:oxy="http://oxyplot.org/wpf"
             mc:Ignorable="d" Height="326.666" Width="458.334">
    <Grid Height="321" Margin="7,8,-40.333,-2.333" VerticalAlignment="Top" HorizontalAlignment="Left" Width="492">
        <Grid.RowDefinitions>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="90*"/>
        </Grid.RowDefinitions>
        <ListBox Name="options"  Background="Transparent" SelectedIndex="1" SelectedValue="{Binding VM_Graph_Attribute}" ItemsSource="{Binding VM_AttributesNames}" Margin="0,0,4,21" Width="226" Height="247" VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.Row="1" />

        <oxy:Plot x:Name="plot" Background="Transparent"  Title="{Binding VM_Graph_Attribute}" Margin="5,51,241,0" Height="179" VerticalAlignment="Top" Grid.Row="1">
            <oxy:Plot.Series>
                <oxy:LineSeries Background="Transparent" ItemsSource="{Binding VM_GraphPoints}" DataFieldX="X" DataFieldY="Y"/>

            </oxy:Plot.Series>
        </oxy:Plot>
    </Grid>
</UserControl>
